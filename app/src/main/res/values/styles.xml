        <item name="android:textColor">@color/white</item>
    </style>

    <style name="costTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35dp</item>
